    "remark": {
      "type": "text"
    },
    "cover": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "abbreviation": {
      "type": "string",
      "required": true
    },
    "century": {
      "type": "enumeration",
      "enum": [
        "unknown",
        "until_the_fifth_century",
        "fifth_century",
        "sixth_century",
        "seventh_century",
        "eighth_century",
        "ninth_century",
        "tenth_century",
        "eleventh_century",
        "twelfth_century",
        "thirteenth_century",
        "fourteenth_century",
        "fifteenth_century",
        "sixteenth_century",
