        "armenian",
        "czech",
        "dutch",
        "english",
        "french",
        "german",
        "greek",
        "hungarian",
        "italian",
        "latin",
        "persian",
        "portuguese",
        "pre-columbian",
        "russian",
        "spanish",
        "turkish"
      ],
      "default": "latin",
      "required": true
    },
    "volumes": {
      "required": true,
      "type": "integer",
      "default": 1,
      "min": 1
    },
    "pages": {
      "type": "integer",
      "min": 0
    },
    "country": {
      "type": "enumeration",
      "enum": [
        "unknown",
        "armenia",
        "austria",
        "belgium",
        "czech_republic",
        "egypt",
        "germany",
        "greece",
        "hungary",
        "france",
        "italy",
        "india",
        "luxembourg",
        "mexico",
        "netherlands",
        "portugal",
        "russia",
        "spain",
        "switzerland",
        "turkey",
        "united_kingdom"
      ],
      "default": "unknown",
      "required": true
    },
    "style": {
      "type": "enumeration",
      "enum": [
        "unknown",
        "baroque",
        "byzantine",
        "carolingian",
        "early_prints",
        "gothic",
        "hebrew",
        "insular",
        "islam/oriental",
        "late_antiquity",
        "oriental",
        "ottonian",
        "pre_columbian",
        "renaissance",
        "romansque"
      ],
      "default": "unknown",
      "required": true
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "digital",
        "facsimile",
        "original"
      ],
      "default": "facsimile",
      "required": true
    },
    "format_width": {
      "type": "integer",
      "min": 0
    },
    "format_height": {
      "type": "integer",
      "min": 0
