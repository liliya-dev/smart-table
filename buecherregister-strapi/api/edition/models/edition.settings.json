{
  "kind": "collectionType",
  "collectionName": "edition",
  "info": {
    "name": "edition"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "authors": {
      "type": "string"
    },
    "genre": {
      "type": "enumeration",
      "enum": [
        "unknown",
        "apocalypses__beatus_manuscripts",
        "astronomy__astrology",
        "bestiaries",
        "bibles__gospels",
        "books_of_hours__prayer_books",
        "cassettes",
        "chronicles__history__law",
        "games__hunting",
        "geography__maps",
        "islam__oriental",
        "judaism__hebrew",
        "leonardo_da_vinci",
        "literature__poetry",
        "liturgical_manuscripts",
        "manual",
        "medicine__botany__alchemy",
        "music",
        "mythology__prophecies",
        "other_religious_works",
        "psalteries",
        "saints_legends",
        "treatises__secular_works"
      ],
      "default": "unknown",
      "required": true
    },
    "publisher": {
      "type": "string"
    },
    "year": {
      "max": 2020,
